<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoomBookingApplication.Resources.Styles.AppStyles">

    <Style TargetType="Label" x:Key="HeadingStyle">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="TextColor" Value="Blue"></Setter>
        <Setter Property="FontSize" Value="Title"/>
     </Style>

    <!-- Buttons Style -->
    <Style TargetType="Button" x:Key="ButtonLblStyle">
            <Setter Property="TextColor" Value="Cyan"/>
            <Setter Property="BackgroundColor" Value="DarkBlue"/>
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>



    </Style>

</ResourceDictionary>
