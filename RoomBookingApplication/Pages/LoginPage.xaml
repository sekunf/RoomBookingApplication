<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoomBookingApplication.Pages.LoginPage"
             Title="LoginPage">

    <VerticalStackLayout>
        <StackLayout Padding="20">

        <Label
            Padding="0,30,0,0"
            Text="Welcome to the Login Page!"
            HorizontalTextAlignment="Center"
            Style="{StaticResource HeadingStyle}"/>

        <Image
            x:Name="AppLogo"
            Source="rblogo.png"
            WidthRequest="180"
            />

        <Image
            x:Name="LoginImage"
            Source="user.png"
            WidthRequest="220"
            />

        <Label
            Text="Username"
            Padding="5"/>

        <Entry
            x:Name="UsernameEntry"
            Placeholder="Enter your username"
            />

         <Label
            Text="Password"
            Padding="5"/>

        <Entry
            x:Name="PasswordEntry"
            Placeholder="Enter your password"
            IsPassword="True"/>

        <Button
            
            x:Name="LoginButton"
            Text="Login"
            Clicked="LoginButton_Clicked"
            Style="{StaticResource ButtonLblStyle}"
            WidthRequest="80"
            Margin="20"/>

            </StackLayout>

    </VerticalStackLayout>
</ContentPage>
