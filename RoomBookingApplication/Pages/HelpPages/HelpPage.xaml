<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoomBookingApplication.Pages.HelpPage"
             Title="HelpPage">

    <VerticalStackLayout>
        <Label 
            Text="Help Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Image
            x:Name="HelpImage"
            Source="info.png"
            WidthRequest="100"
            VerticalOptions="Start"/>

        <Label
            Text="How do I make a reservation?"
            />

        <Button
            x:Name="Question1"
            Text="View Solution"
            Clicked="Question1_Clicked"
            />


        <Label
            Text="Can I modify or cancel my booking?"/>
        <Button
            x:Name="Question2"
            Text="View Solution"
            Clicked="Question2_Clicked"/>


         <Label
            Text="What is your cancellation policy?"/>
        <Button
            x:Name="Question3"
            Text="View Solution"
            Clicked="Question3_Clicked"/>



    </VerticalStackLayout>
</ContentPage>
