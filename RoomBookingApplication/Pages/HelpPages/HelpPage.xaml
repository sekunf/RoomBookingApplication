<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoomBookingApplication.Pages.HelpPage"
             Title="HelpPage">

    <VerticalStackLayout>
     
        <Image
            x:Name="HelpImage"
            Source="info.png"
            WidthRequest="90"
            />

        <Label
            Text="How do I make a reservation?"
            Style="{StaticResource QuestionStyle}"/>

        <Button
            x:Name="Question1"
            Text="View Solution"
            Clicked="Question1_Clicked"
            Style="{StaticResource ViewSolutionButtonLblStyle}"/>


        <Label
            Text="Can I modify or cancel my booking?"
            Style="{StaticResource QuestionStyle}"/>

        <Button
            x:Name="Question2"
            Text="View Solution"
            Clicked="Question2_Clicked"
            Style="{StaticResource ViewSolutionButtonLblStyle}"/>


         <Label
            Text="What is your cancellation policy?"
            Style="{StaticResource QuestionStyle}"/>

        <Button
            x:Name="Question3"
            Text="View Solution"
            Clicked="Question3_Clicked"
            Style="{StaticResource ViewSolutionButtonLblStyle}"/>



    </VerticalStackLayout>
</ContentPage>
