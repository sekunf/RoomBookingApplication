<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoomBookingApplication.Pages.HelpPages.Question3Solutions"
             Title="Question3Solutions">
    <VerticalStackLayout>
        <Label 
            Text="What is your cancellation policy?"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Style="{StaticResource QuestionStyle}"/>

        <StackLayout Margin="30">
    <Label Text="We understand that plans can change, and we strive to be as flexible and convenient as possible!  : " Style="{StaticResource AnswerStyle}"/>
    <Label Text="1. Bookings can be canceled up to 24 hours before the scheduled start time. " Style="{StaticResource AnswerStyle}"/>
    <Label Text="2. You also modify your booking details to a more convientent time!." Style="{StaticResource AnswerStyle}"/>

        </StackLayout>

        <Button
            x:Name="BackToHelp"
            Text="Back to Help"
            Clicked="BackToHelp_Clicked"
            Style="{StaticResource ButtonLblStyle}"/> 
    </VerticalStackLayout>
</ContentPage>
